{
  "public": ".",
  "cleanUrls": true,
  "trailingSlash": false,
  "directoryListing": false,
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    },
    {
      "source": "**/*.html",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" }
      ]
    }
  ],
  "rewrites": [
    { "source": "**", "destination": "/index.html" }
  ],
  "unlisted": [
    ".git",
    ".gitignore"
  ]
} 